model Post {
    id        String   @id @default(cuid())
    title     String
    content   String
    slug      String   @unique
    published Boolean  @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
    author    User     @relation(fields: [authorId], references: [id])
    authorId  String
}
